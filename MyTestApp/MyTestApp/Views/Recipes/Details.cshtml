@model MyTestApp.Models.Recipe

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Recipe</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Ingredients)
        </dt>
        <dd>
            <table class="table">
                <tr>                    
                    <th>Qty</th>
                    <th>Units</th>
                    <th>Item</th>
                </tr>
                @foreach (var ingredient in Model.Ingredients)
                {
                    <tr>                        
                        <td>
                            @Html.DisplayFor(modelItem => ingredient.Quantity)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => ingredient.Unit.UnitName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => ingredient.Name)
                        </td>
                    </tr>
                }
            </table>
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Steps)
        </dt>
        <dd>
            <table class="table">
                <tr>
                    <th>Number</th>
                    <th>Instruction</th>
                </tr>
                @foreach (var step in Model.Steps)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => step.Number)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => step.Instructions)
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
